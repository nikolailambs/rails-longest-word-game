
<div class="container">
  <div class="card">
    <h1>Your word is <%= @result.join("") %> </h1>
    <% if @score > 0 %>
    <h2>Congrats, your score is <%= @score %></h2>
    <% else %>
    <h2>Your score is <%= @score %>. You are stupid!</h2>
    <% end %>

    <%= link_to "Play again", "/" %>
  </div>
</div>
